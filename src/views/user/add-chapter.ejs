<link rel="stylesheet" href="/css/user/add-chapter.css">

<main>
    <h2>📖 Thêm chương mới cho "<%= novel.Title %>"</h2>

    <form action="/user/novels/<%= novel.NovelID %>/add-chapter" method="POST">
        <label for="ChapterNumber">Số thứ tự chương:</label>
        <input type="number" name="ChapterNumber" id="ChapterNumber" required>

        <label for="Title">Tiêu đề chương:</label>
        <input type="text" name="Title" id="Title" required>

        <label for="Content">Nội dung chương:</label>
        <textarea name="Content" id="Content" rows="10" required></textarea>

        <button type="submit">📚 Lưu chương</button>
    </form>
</main>