<link rel="stylesheet" href="/css/public/discussion.css">

<main class="forum-main">
    <h1 class="forum-title">Diễn đàn thảo luận</h1>
    <a href="/user/discussions/new" class="discussion-btn">➕ Tạo bài thảo luận</a>
    <ul class="discussion-list">
        <% discussions.forEach(discussion => { %>
            <li class="discussion-item">
                <h2 class="discussion-title"><a href="/user/discussions/<%= discussion.DiscussionID %>"><%= discussion.Title %></a></h2>
                <p class="discussion-meta">Người đăng: <%= discussion.Username %> | <%= new Date(discussion.CreatedAt).toLocaleDateString() %></p>
                <p class="discussion-stats"><%= discussion.LikeCount %> ❤️ | <%= discussion.CommentCount %> 💬</p>
            </li>
        <% }) %>
    </ul>
</main>

<script>
    document.getElementById("create-discussion-btn").addEventListener("click", function () {
        window.location.href = "/Discussions/new";
    });
</script>